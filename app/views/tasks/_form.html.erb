<%= form_with(model: task, local: true) do |f| %>
    <% if task.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% task.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <%= f.label :content, 'タスク内容' %>
    <%= f.text_field :content%>
    
    <%= f.label :status, 'タスク状況' %>
    <%= f.text_field :status%>
    
    <%= f.submit 'タスクの更新' %>
<% end %>